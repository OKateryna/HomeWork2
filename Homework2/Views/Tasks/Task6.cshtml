@{
    Layout = "_Layout";
    var user = ((Tuple<Post, Comment, Comment, int>)Model);
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Task6</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Task 6</h1>
    <p>Please enter number from 1 to 100: </p>

    <form method="post"
          action="~/Tasks/Task6">
        <input type="text"
               name="number"
               value="@ViewBag.UserId" />

        <input type="submit"
               value="Send" />
    </form>
    <br />

    @if (user != null)
    {
        <table>
            <tr>
                <th>Post</th>
                <th>Longest comment</th>
                <th>Most liked comment</th>
                <th>Amount comments with 0 likes</th>
            </tr>
            <tr>
                <td>
                    <a data-toggle="collapse" href="#collapseLike" role="button" aria-expanded="false" aria-controls="collapseExample">
                        @user.Item1.Title
                    </a>
                    <div class="collapse panel-title" id="collapseLike"><hr />
                    @await Html.PartialAsync("_Post")
                    </div>
                </td>
                <td>@user.Item2?.Body</td>
                <td>@user.Item3?.Body</td>
                <td>@user.Item4</td>
            </tr>
        </table>
    }
    else if (ViewBag.UserId > 0)
    {
        <p>No users with ID: @ViewBag.UserId</p>
    }
    
</body>
</html>
