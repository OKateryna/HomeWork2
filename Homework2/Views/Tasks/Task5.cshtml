@{
    Layout = "_Layout";
    var user = ((Tuple<User, Post, int, int, Post, Post>)Model);
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Task5</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th, td {
            padding: 5px;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Task 5</h1>
    <p>Please enter number from 1 to 100: </p>

    <form method="post"
          action="~/Tasks/Task5">
        <input type="text"
               name="number"
               value="@ViewBag.UserId" />

        <input type="submit"
               value="Send" />
    </form>
    <br />

    @if (user != null)
    {
        <table>
            <tr>
                <th>User</th>
                <th>Last post</th>
                <th>Amount of comments</th>
                <th>Amount unfinished tasks</th>
                <th>Most commented</th>
                <th>Most liked post</th>
            </tr>
            <tr>
                <td>
                    <a data-toggle="collapse" href="#collapseLike" role="button" aria-expanded="false" aria-controls="collapseExample">
                        @user.Item1.Name
                    </a>
                    <div class="collapse panel-title" id="collapseLike"><hr />
                    @await Html.PartialAsync("_User")
                    </div>
                    
                </td>
                <td>@user.Item2.Body</td>
                <td>@user.Item3</td>
                <td>@user.Item4</td>
                <td>@user.Item5.Body</td>
                <td>@user.Item6.Body</td>
            </tr>
        </table>
    }
    else if (ViewBag.UserId > 0)
    {
        <p>No users with ID: @ViewBag.UserId</p>
    }

</body>
</html>