
@{
    Layout = "_Layout";
    var result = ((IEnumerable<Comment>)Model)?.ToList();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Task2</title>
</head>
<body>
    <h1>Task 2</h1>
    <p>Please enter number from 1 to 100: </p>

    <form method="post"
          action="~/Tasks/Task2">
        <input type="text"
               name="number"
               value="@ViewBag.UserId" />

        <input type="submit"
               value="Send" />
    </form>

    <br />
    @if (result != null && result.Count > 0)
    {
        <table>
            <tr>
                <th>Comment List</th>
            </tr>
            @foreach (var tuple in result)
            {
                <tr>
                    <td>@tuple.Body</td>
                </tr>
            }
        </table>
    }
    else if (ViewBag.UserId > 0)
    {
        <p>No comments for user with ID: @ViewBag.UserId</p>
    }
</body>
</html>
